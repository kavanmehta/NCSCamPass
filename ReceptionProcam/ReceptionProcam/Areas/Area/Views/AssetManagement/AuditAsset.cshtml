<script>
    function auditAsset() {
        var assetId = $("#hidAuditAsset").val();
        debugger;
        var remarks = $("#txtRemarks").val();
        $.ajax({
            type: "POST",
            url: "/AssetManagement/AuditAsset?id=" + assetId + '&remarks=' + remarks,
            dataType: "text",
            success: function (data) {
                $('#confirmModal').modal('toggle');
                location.reload();
            },
            error: function () {
                alert("Error occured!!")
            }
        });
    }
</script>
